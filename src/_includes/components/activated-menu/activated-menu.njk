<activated-menu>
    <a href="#" data-element="activated-menu-trigger">{{ params.triggerLabel }}</a>
    <ul data-element="activated-menu-items">
    {% for item in params.items %}
        <li>
            {% if item.children %}
                {{ component('activated-menu', {
                    items: item.children,
                    triggerLabel: item.title
                }) }}
            {% else %}
                <a href="#">{{ item.title }}</a>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
</activated-menu>
